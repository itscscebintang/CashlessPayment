<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyQR"
    android:background="@drawable/tampilan_myqr">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MyQR"
        android:textColor="@color/putih"
        android:fontFamily="@font/poppins_semi"
        android:textSize="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="35dp">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/img_myqr"
        android:layout_width="260dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_myqr"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:textSize="15dp"
        android:text="Scan MyQR Code to Transfer Balance!"
        android:shadowColor="@color/hitam"
        android:fontFamily="@font/poppins_semi">

    </TextView>

    </LinearLayout>

</RelativeLayout>