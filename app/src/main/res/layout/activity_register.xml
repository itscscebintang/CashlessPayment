<?xml version="1.0" encoding="utf-8"?>
 <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utama.Register"
    android:fitsSystemWindows="true"
    android:background="@drawable/tampilan_full">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign"
            android:textSize="38sp"
            android:textColor="@color/birumuda"
            android:fontFamily="@font/poppins_bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/up2"
            android:textSize="38sp"
            android:textColor="@color/oren"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="5dp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/shape_lurus"
        android:layout_marginTop="140dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/birudongker"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    android:textColorHint="@color/hitam">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editname_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/full_name"
                        android:backgroundTint="@color/birudongker"
                        android:textSize="16sp"
                        android:textColor="@color/hitam"
                        android:layout_marginStart="5dp"
                        android:inputType="textCapWords">
                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/birudongker"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/hitam">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editusername_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/username"
                        android:backgroundTint="@color/birudongker"
                        android:textSize="16sp"
                        android:textColor="@color/hitam"
                        android:layout_marginStart="5dp">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/birudongker"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/hitam">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editemail_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/e_mail"
                        android:inputType="textEmailAddress"
                        android:backgroundTint="@color/birudongker"
                        android:textSize="16sp"
                        android:textColor="@color/hitam"
                        android:layout_marginStart="5dp">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/birudongker"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/hitam">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editktm_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/nik_nim"
                        android:backgroundTint="@color/birudongker"
                        android:textSize="16sp"
                        android:textColor="@color/hitam"
                        android:layout_marginStart="5dp">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/birudongker"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/oren"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/hitam">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editpass_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:backgroundTint="@color/birudongker"
                        android:textSize="16sp"
                        android:textColor="@color/hitam"
                        android:layout_marginStart="5dp">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/birudongker"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/oren"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/hitam">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editconfpass_register"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:backgroundTint="@color/birudongker"
                        android:textSize="16sp"
                        android:textColor="@color/hitam"
                        android:layout_marginStart="5dp">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="23dp"
                    android:fontFamily="@font/poppins_bold"
                    android:background="@drawable/tombol_birudongker"
                    android:text="@string/sign_up"
                    android:textColor="@color/putih"
                    android:textSize="16sp">

                </Button>

                <TextView
                    android:id="@+id/txtfirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/already_have_an_account"
                    android:fontFamily="@font/poppins_light"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/hitam">
                </TextView>

                <LinearLayout
                    android:id="@+id/txtlogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="40dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/birudongker"
                        android:text="@string/log"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/birumuda">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:textColorHint="@color/birudongker"
                        android:text="@string/in"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/oren">

                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>